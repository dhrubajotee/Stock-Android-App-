            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ItemGroupSetup" />
        <activity android:name=".ui.ItemInformationSetup" />
        <activity android:name=".classes.Purchase" />
        <activity android:name=".classes.ItemBalance" />
        <activity android:name=".classes.ItemLedger" />
        <activity android:name=".classes.Sell" />
        <activity android:name=".classes.SpecificLedger" />
